@model PersonModel
@{
    ViewData["Title"] = "contact";
}

<h1>Contact</h1>

<div class="contact-form">
    <form method="post">
        @Html.ValidationMessageFor(m => m.Naam) <br />
        @Html.ValidationMessageFor(m => m.Email) <br />
        <label>
            Voornaam: *
            <input type="text" name="naam" autocomplete="off" autofocus="true" />
        </label>
        <label>
            E-mail: *
            <input type="text" name="email" autocomplete="off" />
        </label>
        <input class="button" type="submit" value="verzenden" />
    </form>

    @if (Model != null)
    {
        <p>
            @Model.Naam <br />
            @Model.Email<br />
        </p>
    }
</div>